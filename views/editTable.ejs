<%- include('./includes/admin-header') %>
<section class="section profile container mt-5">
        <div class="col-xl-12">

            <div class="card">
              <div class="card-header">
                  <a href="/admin/tickets/"><i class="bi bi-arrow-left fa-2x"></i></a>
              </div>
              <div class="card-body">
                <form action="/admin/edit-table/<%= table.id %>" method="post">
                    <div class="row mb-3">
                        <label for="name" class="col-md-4 col-lg-3 col-form-label dark2">Name</label>
                        <div class="col-md-8 col-lg-9">
                            <input type="text" class="form-control" id="name" value="<%= table.name %>"  name="name" placeholder="Enter Name(Name of the table e.g regular,vip...)">
                        </div>
                      </div>
                    <div class="row mb-3">
                        <label for="Price" class="col-md-4 col-lg-3 col-form-label dark2">Price</label>
                        <div class="col-md-8 col-lg-9">
                            <input type="number" class="form-control" id="Price" value="<%= table.price %>"  name="price" placeholder="Enter Price(Optional)">
                        </div>
                      </div>
                      <div class="text-end mt-5">
                          <button type="submit" class="btn  btn-primary">Submit</button>
                      </div>
                    </form>
              </div>
            </div>
        </div>
    </section>
<%- include('./includes/admin-footer') %>