<%- include('./includes/admin-header') %>
  <main id="main" class="main">

   
    <section class="section profile container mt-5">

        <!-- <div class="col-xl-8"> -->
          <div class="card">
            <div class="card-header">
                <a href="/admin/profile/"><i class="bi bi-arrow-left fa-2x"></i></a>
            </div>
          <div class="card">
            <div class="card-body pt-3">
              <!-- Bordered Tabs -->
              <ul class="nav nav-tabs nav-tabs-bordered">

                <li class="nav-item">
                  <a href="/admin/profile/" class="nav-link" >Profile</a>
                </li>

                <li class="nav-item">
                  <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-edit">Edit Profile</button>
                </li>

                <li class="nav-item">
                  <a class="nav-link" href="/admin/changeEmail/">Change Email</a>
                </li>

                <li class="nav-item">
                  <a class="nav-link" href="/admin/changePassword/">Change Password</a>
                </li>

              </ul>
              <div class="tab-content pt-2">

                <div class="tab-pane fade show active profile-edit pt-3" id="profile-edit">

                    <!-- Profile Edit Form -->
                    
                    <form action="/admin/edit-profile/" method="post">
                  
                    <div class="row mb-3">
                      <label for="first_name" class="col-md-4 col-lg-3 col-form-label dark2">First Name</label>
                      <div class="col-md-8 col-lg-9">
                        <input name="first_name" type="text" class="form-control" id="first_name" value="<%= admin.first_name %>">
                      </div>
                    </div>
                    <div class="row mb-3">
                      <label for="last_name" class="col-md-4 col-lg-3 col-form-label dark2">Last Name</label>
                      <div class="col-md-8 col-lg-9">
                        <input name="last_name" type="text" class="form-control" id="last_name" value="<%= admin.last_name %>">
                      </div>
                    </div>
                    

                    <div class="row mb-3">
                      <label  class="col-md-4 col-lg-3 col-form-label dark2">Gender</label>
                      <div class="col-md-2 col-lg-3">
                          <input type="radio"  value="Male" class="form-check-input" id="male" <%=admin.gender=="Male" ? 'checked'
                          : '' %> name="gender">
                          <label for="male"> Male</label>
                      </div>
                      <div class="col-md-4 col-lg-4">
                          <input type="radio"  value="Female" class="form-check-input" id="female" <%=admin.gender=="Female" ? 'checked'
                          : '' %> name="gender">
                          <label for="female">Female</label>
                      </div>
                    </div>
                    <div class="row mb-3">
                      <label for="Phone" class="col-md-4 col-lg-3 col-form-label dark2">Phone</label>
                      <div class="col-md-8 col-lg-9">
                        <input name="phone" type="text" class="form-control" id="Phone" value="<%= admin.phone %>">
                      </div>
                    </div>

                    <div class="text-center">
                      <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                    
                  </form><!-- End Profile Edit Form -->
                  
                
                </div>

              </div><!-- End Bordered Tabs -->

            </div>
          </div>

        </div>
    </section>

  </main>
    
  <!-- modal for image upload -->
<%- include('./includes/admin-footer.ejs') %> 